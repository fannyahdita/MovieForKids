        <TextView
            android:id="@+id/reminder_movie_name_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="What movie you want to watch?"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <EditText
            android:id="@+id/reminder_movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:hint="@string/title_lionking"
            app:layout_constraintTop_toBottomOf="@id/reminder_movie_name_question" />

        <TextView
            android:id="@+id/reminder_movie_date_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="When do you want to watch it?"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reminder_movie_name" />

        <DatePicker
            android:id="@+id/reminder_date"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reminder_movie_date_question" />

        <TimePicker
            android:id="@+id/reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:timePickerMode="spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reminder_date" />

        <Button
            android:id="@+id/button_submit_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/soft_pink"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/desc_save"
            android:textColor="@color/dark_grey"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/reminder_time" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>